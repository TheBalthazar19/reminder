{
    "compilerOptions": {
      "target": "ES2022",
      "module": "es2015",
      "rootDir": "./src",
      "declaration": true,
      "moduleResolution": "Bundler",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "types": ["node","typescript","vitest/globals"],
      "jsx": "react",
      "jsxFactory": "jsx",
      "jsxFragmentFactory": "Fragment"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.mts", "src/**/*.test.ts", "src/**/*.test.tsx"]
  }